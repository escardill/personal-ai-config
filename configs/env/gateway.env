# Personal AI Gateway Configuration

# API Configuration
HOST=0.0.0.0
PORT=8080
DEBUG=false
ENVIRONMENT=docker

# Memory System Integration
MEMORY_SYSTEM_URL=http://personal-ai-memory:8001
MEMORY_SYSTEM_API_KEY=memory-service-secret-key-change-in-production

# LLM Configuration
OLLAMA_BASE_URL=http://ollama:11434
OLLAMA_MODEL=llama3.1:8b
OPENAI_API_KEY=your_openai_key_here
OPENAI_MODEL=gpt-4
OPENAI_FALLBACK_ENABLED=true

# API Settings
MAX_TOKENS=2048
TEMPERATURE=0.7
STREAM_RESPONSE=true
CONVERSATION_TIMEOUT=300

# Authentication (Change these in production!)
API_SECRET_KEY=gateway-secret-key-change-in-production
API_KEYS=alice:pai_alice_dev_key_123,bob:pai_bob_dev_key_456,charlie:pai_charlie_dev_key_789

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://pai-webui:8080"]
RATE_LIMIT_REQUESTS_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/gateway.log
LOG_REQUESTS=true

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100