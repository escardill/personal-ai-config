# Personal AI Memory Service Configuration

# API Configuration
HOST=0.0.0.0
PORT=8001
DEBUG=false
ENVIRONMENT=docker

# Database Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=personal_ai_password

# Memory Configuration  
MAX_MEMORIES_PER_CONTEXT=20
MEMORY_RETENTION_DAYS=365
CONTEXT_WINDOW_SIZE=10

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/memory.log
LOG_REQUESTS=true

# Security
CORS_ORIGINS=["http://localhost:3000", "http://localhost:8080", "http://pai-gateway:8080"]
API_SECRET_KEY=memory-service-secret-key-change-in-production

# Performance
MAX_WORKERS=4
CONNECTION_POOL_SIZE=10
REQUEST_TIMEOUT=30